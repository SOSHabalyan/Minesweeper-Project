@page "/leaderboard"
@inject Minesweeper.Blazor.Services.MinesweeperApiService ApiService

<h2>Leaderboard</h2>
@if (entries == null)
{
    <p>Loading...</p>
}
else if (entries.Count == 0)
{
    <p>No leaderboard data available.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Player</th>
                <th>Levels</th>
                <th>Credits</th>
                <th>Mines Flagged</th>
                <th>Spins</th>
                <th>Positive</th>
                <th>Negative</th>
                <th>Dollars</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in entries)
            {
                <tr>
                    <td>@entry.PlayerName</td>
                    <td>@entry.LevelsCompleted</td>
                    <td>@entry.CreditsEarned</td>
                    <td>@entry.MinesFlagged</td>
                    <td>@entry.TimesSpun</td>
                    <td>@entry.PositiveOutcomeCount</td>
                    <td>@entry.NegativeOutcomeCount</td>
                    <td>@entry.DollarsAccumulated</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Minesweeper.Blazor.Services.LeaderboardEntryDto>? entries;
    protected override async Task OnInitializedAsync()
    {
        entries = await ApiService.GetLeaderboardAsync();
    }
}
