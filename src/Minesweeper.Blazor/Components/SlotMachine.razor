@using Minesweeper.Blazor.Services
@code {
    [Parameter] public GameDto? Game { get; set; }
    [Parameter] public EventCallback OnSpin { get; set; }
}
<div class="slot-machine">
    <h3>Slot Machine</h3>
    <div class="reels">
        <!-- TODO: [FULL_IMPLEMENTATION] Show last spin outcome -->
        <p>[Slot Machine Placeholder]</p>
    </div>
    <div class="credits">
        Credits: <span>@Game?.Credits</span> | Dollars: <span>@Game?.Dollars</span>
    </div>
    <button @onclick="OnSpin">Spin</button>
</div>
